@model ReservaTutorias.Frontend.Models.Horario

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <h4>Editar horario</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="IdHorario" class="d-none" readonly />
                    <div class="form-group">
                        <label asp-for="IdTema" class="control-label"></label>
                        <select asp-for="IdTema" class="form-control" asp-items="ViewBag.IdTema"></select>
                        <span asp-validation-for="IdTema" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaHora" class="control-label"></label>
                        <input asp-for="FechaHora" class="form-control" />
                        <span asp-validation-for="FechaHora" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LimiteEstudiantes" class="control-label"></label>
                        <input asp-for="LimiteEstudiantes" class="form-control" min="1" max="10" />
                        <span asp-validation-for="LimiteEstudiantes" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LinkReunion" class="control-label"></label>
                        <input asp-for="LinkReunion" class="form-control" maxlength="300" />
                        <span asp-validation-for="LinkReunion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Volver</a>
        </div>
    </div>
</div>


