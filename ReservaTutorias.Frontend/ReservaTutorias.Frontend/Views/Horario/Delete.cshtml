@model ReservaTutorias.Frontend.Models.ModelViews.ViewHorario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <h3>Debe confirmar para eliminar este horario</h3>
        <div>
            <h4>Horario</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Horario.IdHorario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Horario.IdHorario)
                </dd>
                <dt class="col-sm-2">
                    Tutor
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tutor.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tema.NombreTema)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tema.NombreTema)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Horario.FechaHora)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Horario.FechaHora)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Horario.LimiteEstudiantes)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Horario.LimiteEstudiantes)
                </dd>
            </dl>

            <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <button type="submit" class="btn btn-danger" name="id" value="@Model.Horario.IdHorario">Eliminar</button> |
                <a asp-action="Index">Volver</a>
            </form>
        </div>

    </div>
</div>

