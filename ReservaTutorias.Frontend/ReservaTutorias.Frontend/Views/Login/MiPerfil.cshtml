@model ReservaTutorias.Frontend.Models.Usuario

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <h4>Editar usuario</h4>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-2">
                            <label asp-for="IdUsuario" class="control-label"></label>
                            <input asp-for="IdUsuario" class="form-control" readonly />
                        </div>
                        <div class="form-group col-10">
                            <label asp-for="Cedula" class="control-label"></label>
                            <input asp-for="Cedula" class="form-control" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Apellidos" class="control-label"></label>
                            <input asp-for="Apellidos" class="form-control" />
                            <span asp-validation-for="Apellidos" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12">
                            <label asp-for="Correo" class="control-label"></label>
                            <input asp-for="Correo" class="form-control" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group col-12">
                            <label asp-for="Clave" class="control-label"></label>
                            <input type="password" asp-for="Clave" class="form-control" 
                                   placeholder="Digita tu nueva clave si lo deseas" />
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="TipoUsuario" class="control-label"></label>
                            <select asp-for="TipoUsuario" class="form-control">
                                @if(ViewBag.Perfil == "Administrador")
                                {
                                    <option value="Administrador">Administrador</option>
                                }
                                <option value="Tutor">Tutor</option>
                                <option value="Estudiante">Estudiante</option>
                            </select>
                            <span asp-validation-for="TipoUsuario" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-controller="Home" asp-action="Index">Volver</a>
        </div>
    </div>
</div>
