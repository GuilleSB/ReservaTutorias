@model ReservaTutorias.Frontend.Models.Reserva

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-10">
        <h3>Debe confirmar para borrar la reserva</h3>
        <div>
            <h4>Reserva</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdReserva)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdReserva)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdEstudiante)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdEstudiante)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdHorario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdHorario)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Notas)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Notas)
                </dd>
            </dl>

            <form asp-action="Delete">
                <button type="submit" class="btn btn-danger" name="id" value="@Model.IdReserva">Eliminar</button> |
                <a asp-action="Index">Volver</a>
            </form>
        </div>
    </div>
</div>

