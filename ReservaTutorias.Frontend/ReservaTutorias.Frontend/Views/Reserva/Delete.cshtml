@model ReservaTutorias.Frontend.Models.ModelViews.ViewReserva

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-10">
        <h3>Debe confirmar para borrar la reserva</h3>
        <div>
            <h4>Reserva</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Tema
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Horario.Tema.NombreTema)
                </dd>
                <dt class="col-sm-2">
                    Profesor
                </dt>
                <dd class="col-sm-10">
                    @Model.Horario.Tutor.Nombre @Model.Horario.Tutor.Apellidos
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Horario.Horario.FechaHora)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Horario.Horario.FechaHora)
                </dd>
            </dl>

            <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <button type="submit" class="btn btn-danger" name="id" value="@Model.Reserva.IdReserva">Eliminar</button> |
                <a asp-action="Index">Volver</a>
            </form>
        </div>
    </div>
</div>

