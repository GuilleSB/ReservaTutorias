@model ReservaTutorias.Frontend.Models.Tema

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-10">
        <h4>Editar tema</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdTema" class="control-label"></label>
                        <input asp-for="IdTema" class="form-control" readonly />
                        <span asp-validation-for="IdTema" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdMateria" class="control-label"></label>
                        <select asp-for="IdMateria" class="form-control" asp-items="ViewBag.IdMateria"></select>
                        <span asp-validation-for="IdMateria" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NombreTema" class="control-label"></label>
                        <input asp-for="NombreTema" class="form-control" />
                        <span asp-validation-for="NombreTema" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Volver</a>
        </div>
    </div>
</div>




