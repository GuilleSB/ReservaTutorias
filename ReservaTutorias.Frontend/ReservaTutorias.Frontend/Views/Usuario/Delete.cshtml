@model ReservaTutorias.Frontend.Models.Usuario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center">
    <div class="col-md-10">
        <h3>Debe confirmar para eliminar el usuario</h3>
        <div>
            <h4>Eliminar usuario</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdUsuario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdUsuario)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Cedula)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cedula)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Apellidos)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Apellidos)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Correo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Correo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TipoUsuario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoUsuario)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-action="Index">Volver</a>
            </form>
        </div>

    </div>
</div>
